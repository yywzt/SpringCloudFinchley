<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yw.task.mapper.TaskLevelRewardMapper">
    <select id="get" resultType="com.yw.task.common.model.TaskLevelReward">
        SELECT * FROM task_level_reward
        <where>
            task_id = #{taskId}
            AND level in
            <foreach collection="levels" item="level" separator="," open="(" close=")">
                #{level}
            </foreach>
        </where>
    </select>
</mapper>